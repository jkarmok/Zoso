<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <world>
    <!--
      name = Zone Name (this is case sensitive)
      xMin = X value of TopLeftCorner
      zMin = Z value of TopLeftCorner
      xMax = X value of BottomRightCorner
      zMax = Z value of BottomRightCorner
      tileSize = Tile size to use for region division
      terrainDataFile = File name of the terrain data
     -->
    <zone id="1" name="Western Woodlands" xMin="955" zMin="980" xMax="2000" zMax="1600" tileSize="40" terrainDataFile="world0.map" colliderDataFile="zone1.colliders.xml"/>
    <zone id="2" name="Raz'Jin Sands" xMin="1015" zMin="0" xMax="2000" zMax="980" tileSize="40" terrainDataFile="world0.map" colliderDataFile="zone2.colliders.xml"/>
